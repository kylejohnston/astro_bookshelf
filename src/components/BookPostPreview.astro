---
// renders the book cover on the homepage / index.astro
import { Image } from 'astro:assets'; //test
import type { CollectionEntry } from 'astro:content';
interface Props {
	post: CollectionEntry<'book'>;
}

const { post } = Astro.props;
const altContent = [post.data.title + " by " + post.data.author + " finished on " + post.data.finishDate];
const bookCover  = ["/covers/" + post.data.coverImage];
const searchable = [post.data.title + post.data.author + post.data.finishDate];
---

<article class="post-preview searchable">
	<a href={"/book/" + post.slug + "/"}>
		{post.data.coverImage && <img src={bookCover} alt={altContent} width="480" height="100%" class="book-cover" decoding="async" transition:name={post.slug} /> }
		{post.data.notes && <p class="font-mono text-sm text-center mt-3 text-gray-600">ğŸ“ Notes</p> }
		{post.data.currentlyReading && <p class="font-mono text-sm text-center mt-3 text-gray-600">ğŸ“– Currently Reading</p> }
	</a>
	<div class="hidden">{altContent}</div>
</article>
