---

import { Image } from 'astro:assets'; // â€¦/guides/images/
import BaseHead from '@components/BaseHead.astro'; // <head>
import Footer from '@components/Footer.astro';
import MainNav from '@components/MainNav.astro'; // logo, nav
// import ReadingTime from '@components/ReadingTime.astro';

const { content } = Astro.props;
const { slug } = Astro.params;
const { title, description, author, coverImage, permalink, library, bookshelf, bookshop, amazon, other, startDate, finishDate } = content;
const pageTitle = [title + " by " + author];
---

<html lang={content.lang || 'en'}>
	<head>
		<BaseHead {pageTitle} {author} {description} {permalink} />
	</head>

	<body>
		<MainNav /> <!-- logo, nav -->
    <article class="book-details">
      <header>
        <h1 class="title">{title}</h1>
        <h2 class="author"><span>by </span> {author}</h2>
      </header>
      <div class="book-content">
        <main>
          <section>
            <div class="reading-time">
              { frontmatter.startDate && <div><h4>Started:</h4><p>{frontmatter.startDate}</p></div> }
              { frontmatter.finishDate ? 
                <div><h4>Finished:</h4><p>{frontmatter.finishDate}</p></div> : 
                <div><h4>Finished:</h4><p>Currently Reading</p></div>
              }
            </div>
            <h3>Description</h3>
            <slot />
            <h3 class="mt-8">Get a copy</h3>
            {frontmatter.library   && <p><a href={frontmatter.library}>Local Library</a></p> }
            {frontmatter.bookshelf && <p><a href={frontmatter.bookshelf}>Bookshop.org</a></p> }
            {frontmatter.bookshop  && <p><a href={frontmatter.bookshop}>Bookshop.org</a></p> }
            {frontmatter.amazon    && <p><a href={frontmatter.amazon}>Amazon</a></p> }
            {frontmatter.other     && <p><a href={frontmatter.other}>Website</a></p> }
          </section>
        </main>
        <div class="book-cover-col">
            {coverImage && <img transition:name={slug} width="100%" height="auto" class="book-cover sticky top-4" loading="lazy" src={coverImage} alt={pageTitle} /> }
        </div>
      </div>
    </article>
    <Footer />
	</body>
</html>
