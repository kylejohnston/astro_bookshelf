---
// Homepage - display a paginated list of books 
import { getCollection } from 'astro:content';
import BaseHead from '@components/BaseHead.astro';
import Footer from '@components/Footer.astro';
import MainNav from '@components/MainNav.astro'; // logo, nav
import BookShelf from '@components/BookShelf.astro';
import BookList from '@components/BookList.astro';
import Search from "astro-pagefind/components/Search";

let pageTitle = "Kyle Johnston's Bookshelf Â· List"
let description = 'A running list of the books I\'ve read.';
let permalink = 'https://books.kyleio.com/list';

function formatDate(dateString) {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    timeZone: 'UTC'
  });
}

const books = (await getCollection('book')).sort((a, b) => {
	const dateA = new Date(a.data.added);
	const dateB = new Date(b.data.added);
	return dateB.valueOf() - dateA.valueOf();
});
---

<html lang="en">
<head>
	<BaseHead {pageTitle} {description} {permalink} />
</head>

<body>
	<MainNav /> <!-- logo, nav -->
	<main class="content">
		<!-- search -->
		<div class="grid grid-cols-3 justify-center items-start px-4 pt-4 text-lg text-gray-700 md:px-8 md:pt-8 md:justify-between;">
			<Search id="search" className="pagefind-ui col-span-2" uiOptions={{ showImages: false }} />
			<div class="col-span-1 m-0 pl-4 py-3 flex gap-4 content-start justify-end items-start">
				<a href="/favorites" aria-label="View favorites page">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon" transition:name="toggleFaves" transition:animate="fade">
						<title id="favoritesIconTitle">Toggle favorites view</title>
						<desc>Toggle favorites view</desc>
						<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
					</svg>
				</a>
				<a href="/" aria-label="Switch to grid view">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon" role="img" aria-labelledby="gridIconTitle" transition:name="toggleView" transition:animate="fade">
						<title id="gridIconTitle">Switch to grid view</title>
						<desc>Switch to grid view</desc>
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
					</svg>
				</a>
			</div>
		</div>
		
		<!-- books (list view) -->
		<section aria-label="Bookshelf" id="view-container" class="px-4 py-4 md:px-8 md:py-8;">
			<!-- <ul class="list-none! m-0!"> -->
			{books.map(book => (
				<p>
					<a class="font-normal" href={"/book/" + book.slug + "/"}>
						{book.data.title}
					</a><br>
					<span class="text-base font-normal">{book.data.author}</span> &centerdot;  
					<span class="text-base! text-gray-500">
						Added {formatDate(book.data.added)}
						{book.data.favorite ? <span> &centerdot; â™¥ï¸Ž</span> : <span></span> }
						{book.data.notes ? <span> &centerdot; <a href={"/book/" + book.slug + "/"}>Notes</a></span> : <span></span> }
						{book.data.currentlyReading && <span>ðŸ“– Currently Reading</span>}
					</span>
				</p>
			))}
			{/* </ul> */}
		</section>
	</main>
	<Footer />
</body>
</html>

<style>
    :root {
        --pagefind-ui-scale: 0.75;
        --pagefind-ui-border: #12121244;
        --pagefind-ui-border-radius: 12px;
        --pagefind-ui-font: var(--font-mono);
    }
	.icon {
		width: 24px;
		height: 24px;
	}
</style>
